# Runtime
NODE_ENV=development
HOST=0.0.0.0
PORT=3001

# Logging
# Valid values: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
# true enables pino-pretty output
LOG_PRETTY=true

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Admin authentication
ADMIN_TOKEN_SECRET=
# Comma-separated CORS allowlist for browser origins
# Example: http://localhost:3000,https://admin.example.com
CORS_ALLOWED_ORIGINS=

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----"

# Base URL for serving product images (e.g. CDN or storage bucket public URL).
# A trailing slash is optional; the API normalises it automatically.
# Example: https://storage.googleapis.com/your-bucket/
IMAGE_BASE_URL=
