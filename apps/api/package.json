{
    "name": "productsdisplay-api",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun --watch src/server.ts",
        "db:drop": "drizzle-kit drop --config drizzle.config.ts",
        "db:generate": "drizzle-kit generate --config drizzle.config.ts",
        "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
        "db:push": "drizzle-kit push --config drizzle.config.ts",
        "db:studio": "drizzle-kit studio --config drizzle.config.ts",
        "lint": "eslint .",
        "start": "bun src/server.ts",
        "test:unit": "bun test tests/unit --max-concurrency 4",
        "test:integration": "bun --env-file=.env.test test tests/integration --max-concurrency 1",
        "test:integration:db:up": "docker compose -f docker-compose.test.yml up -d postgres",
        "test:integration:db:down": "docker compose -f docker-compose.test.yml down -v",
        "test:integration:local": "bash ./scripts/test-integration-local.sh"
    },
    "engines": {
        "bun": ">=1.3.9"
    },
    "dependencies": {
        "@fastify/cookie": "^11.0.2",
        "@fastify/cors": "^11.2.0",
        "@fastify/helmet": "^13.0.2",
        "@fastify/multipart": "^9.3.0",
        "@fastify/rate-limit": "^10.3.0",
        "@google-cloud/storage": "^7.19.0",
        "@productsdisplay/contracts": "workspace:*",
        "drizzle-orm": "^0.45.1",
        "fastify": "^5.6.1",
        "jose": "^6.1.3",
        "pino": "^10.3.1",
        "playwright": "^1.58.2",
        "playwright-core": "^1.58.2",
        "postgres": "^3.4.8",
        "sharp": "^0.34.5",
        "zod": "^4.3.4"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/node": "^25",
        "@types/sharp": "^0.32.0",
        "drizzle-kit": "^0.31.9",
        "eslint": "^10.0.2",
        "pino-pretty": "^13.1.3",
        "typescript-eslint": "^8.56.1",
        "typescript": "^5.9.3"
    }
}
