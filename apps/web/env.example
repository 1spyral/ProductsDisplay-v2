# Backend API base URL
API_BASE_URL=http://127.0.0.1:3001

# CDN where product images are loaded from
NEXT_PUBLIC_IMAGE_PATH=

# Comma separated allowed image remote patterns
NEXT_ALLOWED_IMAGE_REMOTE_PATTERNS=

# Admin authentication
ADMIN_PASSWORD=

# Secret used to sign admin access/refresh tokens (JWT, HS256)
# Use a long random string (32+ chars)
ADMIN_TOKEN_SECRET=

# Logging
# Valid values: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
