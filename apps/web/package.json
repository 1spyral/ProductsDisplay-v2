{
  "name": "productsdisplay",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build && bun run cp",
    "start": "bun .next/standalone/server.js",
    "test": "bun run test:unit",
    "test:unit": "bun test tests/unit --max-concurrency 4",
    "test:e2e": "playwright test",
    "test:e2e:local": "bash ./scripts/test-e2e-local.sh",
    "test:e2e:headed:local": "bash ./scripts/test-e2e-local.sh --headed",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "bun test tests/unit --coverage --coverage-reporter=text --coverage-reporter=lcov --coverage-dir=coverage --max-concurrency 4",
    "lint": "eslint .",
    "cp": "cp -r public .next/standalone/ && cp -r .next/static .next/standalone/.next/",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "engines": {
    "bun": ">=1.3.9"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@productsdisplay/contracts": "workspace:*",
    "@vercel/analytics": "^1.6.1",
    "jose": "^6.1.3",
    "next": "^16.1.6",
    "pino": "^10.3.1",
    "postgres": "^3.4.8",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@happy-dom/global-registrator": "^20.6.3",
    "@tailwindcss/postcss": "^4.2.0",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25",
    "@types/pg": "^8.11.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.4.1",
    "pino-pretty": "^13.1.3",
    "playwright": "^1.58.2",
    "postcss": "^8",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
