# Database where products are loaded from (for runtime)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Database credentials (for migrations with drizzle-kit)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=dbname
DB_USER=user
DB_PASSWORD=password

# CDN where product images are loaded from
NEXT_PUBLIC_IMAGE_PATH=

# Google Cloud Storage Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name

# Google Cloud Authentication (choose one method)
# Method 1: Service Account Key File (recommended for development)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Method 2: Service Account Key as Environment Variables (recommended for production)
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----"

# Admin authentication
ADMIN_PASSWORD=

# Secret used to sign admin access/refresh tokens (JWT, HS256)
# Use a long random string (32+ chars)
ADMIN_TOKEN_SECRET=